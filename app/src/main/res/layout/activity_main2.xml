<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <!--ให้โค้ตอยู่ได้หลายๆโค้ต-->
<!--home recipe ให้เนื้อหาเป็นตาราง ให้มีจำนวนคอลัมเป็น 2 และมีแถวของข้อมูลเป็น 1-->
    <GridLayout
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_height="0dp"
        android:background="@drawable/bg2"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="70dp">

<!--CardView เค้กกล้วยหอม-->
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:cardCornerRadius="15dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardElevation="0dp"
            android:layout_margin="15dp">
            <!--cardElevation ไม่มีเงา-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/banafin" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Steamed Banana Cake"
                    android:textSize="15sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"/>

                <!--ปุ่มRead linkกับาสูตร-->
                <Button
                    android:id="@+id/button5"
                    android:layout_width="68dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="120dp"
                    android:padding="5sp"
                    android:text="Read"
                    android:textSize="10sp">
                </Button>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <!--CardView ปอเปี๊ยะ-->
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:cardCornerRadius="15dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardElevation="0dp"
            android:layout_margin="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/p" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Fried spring rolls"
                    android:textSize="15sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="10sp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"/>

                <!--ปุ่ม Read-->
                <Button
                    android:layout_width="68dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="120dp"
                    android:padding="5sp"
                    android:text="Read"
                    android:textSize="10sp">
                </Button>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <!--CardView ข้าวต้มทรงเครื่อง-->
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:cardCornerRadius="15dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardElevation="0dp"
            android:layout_margin="15dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/tom2" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Rice Porridge"
                    android:textSize="15sp"
                    android:layout_marginLeft="35sp"
                    android:layout_marginRight="10sp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"/>

                <!--ปุ่ม Read-->
                <Button
                    android:layout_width="68dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="110dp"
                    android:padding="5sp"
                    android:text="Read"
                    android:textSize="10sp"></Button>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!--CardView แฟนเค้กฟักทอง-->
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:cardCornerRadius="15dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardElevation="0dp"
            android:layout_margin="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/pancake" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Pumpkin Pancake"
                    android:textSize="15sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="10sp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"/>

                <!--ปุ่ม Read-->
                <Button
                    android:layout_width="68dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="110dp"
                    android:padding="5sp"
                    android:text="Read"
                    android:textSize="10sp"></Button>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!--CardView อะโวคาโด้ มิลเชก-->
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:cardCornerRadius="15dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardElevation="0dp"
            android:layout_margin="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="89dp"
                    android:layout_height="85dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="40dp"
                    android:src="@drawable/avo6" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Honey avocado milkshake"
                    android:textSize="15sp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="3sp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"/>

                <!--ปุ่ม Read-->
                <Button
                    android:layout_width="68dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="110dp"
                    android:padding="5sp"
                    android:text="Read"
                    android:textSize="10sp"

                    ></Button>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!--CardView โกโก้มิ้นท์-->
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:cardCornerRadius="15dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardElevation="0dp"
            android:layout_margin="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="120dp"
                    android:src="@drawable/coco4"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_height="140dp"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Cocoa Lava Mint"
                    android:textSize="15sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="10sp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"/>

                <Button
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="145dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5sp"
                    android:text="Read"
                    android:textSize="10sp"></Button>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--menu-->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_menu"/>

        <!--แบ่งหน้าแอพเป็นส่วนๆ ให้แต่ละหน้าเวลากดเมนูเพื่อเปลี่ยนไปอีกหน้าไม่ซ้อนทับกัน-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frameLayout"
            android:layout_above="@id/bottomNavigationView"
            >

        </FrameLayout>

        <!--แถบหัวแอพ-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/Light_purple"/>

        <RelativeLayout
            android:layout_width="292dp"
            android:layout_height="87dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logotext"
                android:paddingLeft="100dp"
                android:paddingBottom="30dp" />

            <!--ปุ่มมาหน้าหลัก-->
            <Button
                android:id="@+id/button6"
                android:layout_width="70dp"
                android:layout_height="62dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/home"
                android:padding="14dp"
                android:paddingLeft="100dp"
                android:paddingBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.528"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.945"
                app:layout_constraintWidth_percent=".8" />

        </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>