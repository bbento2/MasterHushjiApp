<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="409dp"
    android:layout_height="729dp"
    app:layout_editor_absoluteX="1dp"
    app:layout_editor_absoluteY="1dp"
    android:fillViewport="true"
    tools:context = ".BananaCake">
<!--ScrollView ใช้แสดงให้หน้าสูตรอยู่่แนวตั้ง และสามารถเลื่อนดูหน้าแอพได้
โดยประกาศให้ใช้พวก namespace พวก app android and tools โดยกำหนดให้
มีความกว้างของหน้าแอพเป็น 409dp และมีความสูงเป็น 729 dp-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-35dp"
        tools:layout_editor_absoluteY="-42dp">

        <!--RelativeLayout จัดเนื้อหาให้รวมกลุ่มเดียวกัน โดยให้ความกว้างและความสูงแสดงข้อมูล
        เท่ากับหน้าแอพ-->

        <!--photo food-->
        <ImageView
            android:layout_width="269dp"
            android:layout_height="140dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="71dp"
            android:layout_marginBottom="506dp"
            android:src="@drawable/banafin" />
        <!--ตำแหน่งสิ้นสุดของรูปอยู่ตรง Parent
        รูปอยู่ข้างล่าง parent ปรับตำแหน่งรูปให้อยู่ตรงกลางในแนวตั้ง
        เว้นระยะขอบบนด้านนอกเป็น 60dpและเว้นระยะขอบขวา เป็น71 dp
        เว้นระยะขอบล้างสุดจากแอพเป็น 506 dp-->

        <!--แถบเมนูข้างบน-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/Light_purple" />

        <!--foodname-->
        <TextView
            android:layout_width="235dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="155dp"
            android:layout_marginBottom="682dp"
            android:text="Steamed Banana Cake"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--เนื้อหาสูตรอาหารกับวิธีทำ-->
        <TextView
            android:layout_width="363dp"
            android:layout_height="495dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="86dp"
            android:layout_marginBottom="-2dp"
            android:text="@string/bannanacake"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!--ปุ่มออกไปหน้าhome-->
        <Button
            android:id="@+id/button6"
            android:layout_width="49dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/x">
        </Button>

    </RelativeLayout>
</ScrollView>